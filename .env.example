# 应用配置
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# 应用信息
APP_NAME=ok-time
APP_VERSION=1.0.0

# 远程脚本配置
REMOTE_SCRIPTS_DELAY=60000
REMOTE_SCRIPTS_TIMEOUT=30000
REMOTE_SCRIPTS_RETRY_ATTEMPTS=3
REMOTE_SCRIPTS_RETRY_DELAY=5000

# 远程脚本URL数组 (用逗号分隔)
REMOTE_SCRIPTS_URLS=https://example.com/script1.sh,https://example.com/script2.sh,https://example.com/init-script.sh

# 是否启用远程脚本执行
REMOTE_SCRIPTS_ENABLED=true
